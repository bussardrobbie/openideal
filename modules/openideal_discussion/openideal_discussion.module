  if ($message->getTemplate()->id() == 'node_created'
    && ($node = $message->field_node_reference->entity)
    && $node->bundle() == 'discussion'
    && $node->field_visibility->value) {
    // @todo Implement logic.
    $account = \Drupal::currentUser();
    /** @var \Drupal\openideal_idea\OpenidealHelper $helper */
    $helper = \Drupal::service('openideal_idea.helper');
    $group_contents = $helper->getGroupFromIdeaNode($node);
    $group = current($group_contents);
    $member = $helper->getGroupMember($account, $node, 'idea-group_node-discussion');
  }
}
